<resources>
    <!-- Base application theme. -->
    <style name="Theme.GameCatalog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_600</item>
        <item name="colorPrimaryVariant">@color/black_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_600</item>
        <item name="colorSecondaryVariant">@color/black_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_600</item>
        <item name="android:navigationBarColor">@color/black_600</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashScreenStyle">
        <item name="android:background">@color/black_800</item>
    </style>
    <style name="LogoText" parent="BaseTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BaseTextStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/dosis_regular</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText" parent="TextColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/dosis_regular</item>
    </style>

    <style name="ConstraintLayoutStyle" parent="BagroundLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Toolbar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_600</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="TextToolbar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextNoData" parent="BaseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RecyclerView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingBottom">80dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="layout_constrainedHeight">true</item>
    </style>

    <style name="TextThemeStyle" parent="TextColor">
        <item name="android:fontFamily">@font/dosis_bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SearchBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="boxBackgroundColor">@color/gray_200</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/gray_200</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="HintColor">
        <item name="android:textColorHint">@color/gray_600</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleText" parent="BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="BagroundLayout" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="TitleDetail" parent="TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
    </style>

    <style name="SubTitleDetail" parent="TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
    </style>

    <style name="ValueDetail" parent="TextColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dosis_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BackBtn" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconSize">25dp</item>
    </style>
    <style name="DivStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@color/gray_200</item>
    </style>
    <style name="ClearDatabaseIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/black</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>
</resources>